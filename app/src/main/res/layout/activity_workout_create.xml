<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WorkoutCreateActivity">

    <TextView
        android:text="This is where you will create a new workout."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/exerciseOptionsButton"
        android:text="Exercise Options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/viewWorkoutButton"
        android:text="View Created Workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>